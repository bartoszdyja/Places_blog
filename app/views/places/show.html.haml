

.panel.panel-default#show
	.panel-heading
		%h3=@place.name
		.pull-right
			Rank 
			=@place.votes_for.size
	.panel-body
		.col-sm-5
			%p
				%strong	Description
			%p=@place.description
		.col-sm-7
			%center
				=image_tag @place.image.url(:normal)
	.panel-footer
		-if @place.user = current_user
			=link_to 'Edit', edit_place_path(@place)
			=link_to 'Destroy'
		=link_to 'Back', places_path
	.well
		%h2 Comments (#{@comments.size})
		-@comments.each do |comment|
			.well
				%h4#com=comment.user.email
				%p#com=comment.body
				.pull-right
					%p#com_date
						Added 
						=time_ago_in_words(comment.created_at) 
						ago


