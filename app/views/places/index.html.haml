%p#notice=notice

%h1 All places
.panel.panel-default
	-@places.each do |place|
		.panel-heading
			%h1.panel-title=place.name
		.panel-body
			%p=truncate(place.description, length: 440, separator: ' ')
		.panel-footer
			=link_to 'Like', place
			=place.category.name
			.pull-right
				=link_to 'Show', place
				=link_to 'Edit', place
				=link_to 'Destroy', place

